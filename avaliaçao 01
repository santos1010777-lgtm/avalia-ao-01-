import java.util.Scanner;

public class Termometro {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("=== Term√¥metro Simples ===");
        System.out.print("Digite a temperatura em Celsius: ");
        double celsius = scanner.nextDouble();

        // Convers√£o para Fahrenheit e Kelvin
        double fahrenheit = (celsius * 9/5) + 32;
        double kelvin = celsius + 273.15;

        System.out.println("Temperatura em Celsius: " + celsius + " ¬∞C");
        System.out.println("Temperatura em Fahrenheit: " + fahrenheit + " ¬∞F");
        System.out.println("Temperatura em Kelvin: " + kelvin + " K");

        // Classifica√ß√£o simples
        if (celsius < 15) {
            System.out.println("Status: Frio ‚ùÑÔ∏è");
        } else if (celsius >= 15 && celsius <= 25) {
            System.out.println("Status: Agrad√°vel üå§Ô∏è");
        } else {
            System.out.println("Status: Quente ‚òÄÔ∏è");
        }

        scanner.close();
    }
}



